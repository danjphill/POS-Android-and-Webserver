<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/view_cus_imageButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/place_holder" />


        <TextView
            android:id="@+id/view_cus_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: Jane Doe"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/view_cus_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer ID: 1"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/view_cus_since"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Since: June 5th 2017"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/view_cus_loc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: Port of Spain"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/view_cus_rewardsp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Logged In Since: 5 Hours Ago"
            android:textAlignment="center" />

        <Button
            android:id="@+id/view_cus_redeem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Redeem Rewards"
            android:textAlignment="center" />
    </LinearLayout>
</LinearLayout>