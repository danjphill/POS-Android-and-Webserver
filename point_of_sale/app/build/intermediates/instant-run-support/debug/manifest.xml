            </intent-filter>
        </activity>
        <activity android:name="com.ecng6613.point_of_sale.Set_IP" >
            <intent-filter>
                <action android:name="android.intent.action.SETIP" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
